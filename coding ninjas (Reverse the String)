#include <bits/stdc++.h> 

 

void reverse(string& str,int i,int j){

    

    //base case

    if(i>j){

        return ;

    }

 

    //processing

    swap(str[i],str[j]);

    i++;

    j--;

 

    //recursion call

    reverse(str,i,j);

 

}

string reverseString(string str)

{

    // Write your code here.

    reverse(str,0,str.length()-1);

    return str;

}
